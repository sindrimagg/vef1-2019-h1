.grid__title {
  font-family: $font-heading;
  font-size: 2.25rem;
  font-weight: 700;
}

.grid__text {
  display: flex;
  margin: $gutter 0;
  flex-direction: column;
}

.grid__img {
  width: 100%;
}

.grid__texti {
  font-size: 1.5rem;
}

.grid__text > * {
  margin-bottom: $gutter;
}

.grid__link {
  color: $black;
  background-color: $blue;
  width: 50%;
  padding: 1em 0em;
  text-decoration: none;
  border-radius: 4px;
  text-align: center;
  transition: background-color $transition, color $transition;
}

.grid__link:hover {
  color: $white;
  background-color: $orange;
}

@media (min-width: 800px) {
  .grid__col {
    width: 50%;
    @include columns(6);
  }

  .grid__row {
    display: flex;
    margin-bottom: $gutter * 2;
  }

  .grid__text {
    margin: 0;
  }

  .grid__col--first800 {
    order: -1;
  }
}

@media (min-width: $max-width + 2 * $gutter) {
  .grid {
    padding: 0;
  }
}
